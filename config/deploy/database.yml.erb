<% if fetch(:rails_env) == "staging" %>
staging:
<% elsif fetch(:rails_env) == "production" %>
production:
<% end %>
  adapter: mysql2
  encoding: utf8
  reconnect: true
  pool: 5
  host: <%= Capistrano::CLI.ui.ask("Enter QA Reports MySQL database host ip address (or localhost):")%>
  port: <%= Capistrano::CLI.ui.ask("Enter QA Reports MySQL database port (usually 3306):")%>
  database: <%= Capistrano::CLI.ui.ask("Enter QA Reports MySQL database name:")%>
  username: <%= Capistrano::CLI.ui.ask("Enter QA Reports MySQL user name:")%>
  password: <%= Capistrano::CLI.password_prompt("Enter QA Reports MySQL password: ")%>
  timeout: 5000

