<div class="page_content">

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
	<h1>Edit <%= resource_name.to_s.humanize %></h1>
  <%= devise_error_messages! %>

	<div class="field last">
		<%= f.label :email %>
		<%= f.text_field :email, :class => "text" %>
	</div>
	
	<div class="field last">	
		<%= f.label :password %>
		<%= f.password_field :password, :class => "text short" %>
		<small>leave blank if you don't want to change it</small>
	</div>

	<div class="field last">
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation, :class => "text short" %>
	</div>
	
	<div class="field last">	
		<%= f.label :current_password %>
		<%= f.password_field :current_password, :class => "text short" %>
		<small>we need your current password to confirm your changes</small>
 	</div>

	<div id="wizard_actions">
		<%= f.submit "Update", :class => "big_btn login" %>
	</div>
<% end %>

	<div class="form_misc_area">
		<h1>Unhappy?</h1>
		<div class="action_btns">
		 <%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete, :class => 'small_btn cancel' %>
		 </div>	
	</div>
	
	<!-- <%= link_to "Back", :back %>-->

</div>