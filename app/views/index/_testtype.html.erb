    <% hardware.each do |hw| %>
      <li><a href="<%=url_for :controller=>'index', :action=>'filtered_list', :release_version=>@selected_release_version, :target=>target, :testtype=>testtype, :hwproduct=>hw%>"><%=hw%></a></li>
    <% end %>
  </ul>

