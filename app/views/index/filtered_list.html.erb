<div id="index_page">
<%= breadcrumbs %>

<% content_for :version_navi do %>
  <div id="version_navi">
	<%= release_version_navigation(@selected_release_version, @target, @testtype, @hwproduct) %>
  </div>
<% end %>
 
<table id="report_filtered_navigation" class="filtered">
    <thead>
    <tr>
      <th scope="col" class="filtered"><%=current_filter_path%>
      	<a href="<%=rss_url%>" class="rss" title="RSS feed">RSS feed</a>
      </th>
    </tr>
    </thead>
    <tr>
      <td class="filtered">
     <% if @trend_graph_url_abs %>
      	  <div class="chart_actions stack_chart">
                <div id="abs_trend">
                  <canvas id="trend_graph_abs" width="700" height="400"/>
                  <img src="<%=@trend_graph_url_abs%>" />
                </div>
                <div id="rel_trend" style="display:none;">
                  <img src="<%=@trend_graph_url_rel%>" />
                </div>
	      	  <a id="abs_button" class="ui_btn inactive">Absolute values</a>
	      	  <a id="rel_button" class="ui_btn">Relative %</a>

              <a id="csv_report_link" href="<%= url_for :controller => 'csv_export', :action => 'export', :release_version => @selected_release_version, :target => @target, :testtype => @testtype, :hwproduct => @hwproduct %>">Download as CSV</a>
      	  </div>
      <% end %>
      
      	<%= render :partial=>'month', :collection => @headers %>
      
      <%= will_paginate @paginated_sessions %>
      
      </td>
    </tr>
</table>
</div>
<% if @trend_graph_url_abs %>
<script language="javascript" type="text/javascript">
$(document).ready(function(){
  $("#abs_button").click(function(){
    $("#abs_button").addClass("inactive");
    $("#rel_button").removeClass("inactive");
    $("#abs_trend").show();
    $("#rel_trend").hide();
  });

  $("#rel_button").click(function(){
    $("#abs_button").removeClass("inactive");
    $("#rel_button").addClass("inactive");
    $("#abs_trend").hide();
    $("#rel_trend").show();
  });
});

// graph data
var trend_abs_passed = [ <%=@trend_graph_data_abs.passed.map{|v| v.to_s}.join(",")  %> ];
var trend_abs_failed = [ <%=@trend_graph_data_abs.failed.map{|v| v.to_s}.join(",")  %> ];
var trend_abs_na     = [ <%=@trend_graph_data_abs.na.map    {|v| v.to_s}.join(",")  %> ];
var trend_labels     = [ <%=@trend_graph_data_abs.days      {|d| '"#{d}"'}.join(",") %> ];

var g = new Bluff.StackedBar('trend_graph_abs', '700x400');
g.hide_title = true;
g.tooltips = true;
g.set_theme({
  colors: ['#000000'],
  marker_color: '#000000',
  font_color: '#000000',
  background_colors: ['white', 'white']
});

g.data('pass', trend_abs_passed, '#73a20c');
g.data('fail', trend_abs_failed, '#ec4343');
g.data('n/a',  trend_abs_na,     '#cacaca');
g.labels = trend_labels;
g.marker_font_size = 11;

g.draw();

</script>
<% end %>
